<odoo>
    <record id="view_hr_payslip_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Payslip">
                <sheet>
                    <group>
                        <field name="employee_id" string="Employee"/>
                        <field name="date_from" string="Start Date"/>
                        <field name="date_to" string="End Date"/>
                    </group>
                    <group string="Attendance Records">
                        <field name="attendance_ids" readonly="1">
                            <tree string="Attendance Records">
                                <field name="check_in"/>
                                <field name="check_out"/>
                                <field name="worked_hours"/>
                                <field name="approved"/>
                                <button name="toggle_approval" type="object" string="Approve" attrs="{'invisible': [('approved', '=', True)]}" class="btn-primary oe_inline"/>
                                <button name="toggle_approval" type="object" string="Unapprove" attrs="{'invisible': [('approved', '=', False)]}" class="btn-danger oe_inline"/>
                                <!-- View Details Button -->
                                <button name="action_view_details" type="object" string="View Details" class="btn-secondary oe_inline"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Define the action for the Payslip submenu -->
    <record id="action_hr_reports" model="ir.actions.act_window">
        <field name="name">Payslip Reports</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">tree,form</field>
    
        <field name="context">{
            "group_by": ["date_to:month","date_to:day"]
        }</field>
        <field name="domain">[]</field>
    </record>

    <!-- Define the top-level Reporting menu item under the HR root menu -->
    <menuitem id="menu_hr_reporting_root" name="Reporting" sequence="20" parent="hr.menu_hr_root" groups="hr.group_hr_manager" />

    <!-- Define the Payslip submenu under Reporting -->
    <menuitem id="menu_hr_reports" name="Payslip" parent="menu_hr_reporting_root" action="action_hr_reports" groups="hr.group_hr_manager"/>



    <record id="action_approve_attendance" model="ir.actions.server">
        <field name="name">Approve</field>
        <field name="model_id" ref="employee_payroll_attendance.model_hr_payslip"/>
        <field name="binding_model_id" ref="employee_payroll_attendance.model_hr_payslip"/>
        <field name="binding_type">action</field>
        <field name="sequence" eval="2"/>
        <field name="state">code</field>
        <field name="code">
            records.action_approve_attendance()
        </field>
    </record>
</odoo>
